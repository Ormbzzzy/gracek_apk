package com.libratech.mia;

import com.darvds.ribbonmenu.RibbonMenuView;

import android.app.Activity;
import android.content.Intent;
import android.os.Bundle;
import android.view.MenuItem;

public class ScanItemActivity extends Activity implements iRibbonCallback{

	RibbonMenuView rbmView;
	
	@Override
	protected void onCreate(Bundle savedInstanceState) {
		super.onCreate(savedInstanceState);
		setContentView(R.layout.item_scan);
		rbmView = (RibbonMenuView) findViewById(R.id.ribbonMenuView);
		rbmView.setMenuClickCallback(this);
		rbmView.setMenuItems(R.menu.home);
	}
	
	@Override
	public boolean onOptionsItemSelected(MenuItem item) {
		int id = item.getOrder();

		if (item.getItemId() == android.R.id.home) {

			rbmView.toggleMenu();

			return true;

		} else {
			String classes[] = {"HomeActivity","ScanItemActivity","FeedbackActivity"}; 
			try {
				startActivity(new Intent( HomeActivity.this,Class.forName("com.libratech.mia."+classes[id])));
			} catch (ClassNotFoundException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
			return super.onOptionsItemSelected(item);
		}
	}
}
