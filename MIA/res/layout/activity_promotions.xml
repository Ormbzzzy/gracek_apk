<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Promotions" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <Button
            android:id="@+id/newProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:drawableLeft="@drawable/ic_action_person"
            android:paddingBottom="16dp"
            android:paddingLeft="-125dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:text="New Products"
            android:textSize="20sp" />
        <!-- android:drawablePadding="-155dp" -->

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#c0c0c0" />

        <Button
            android:id="@+id/discountedProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:drawableLeft="@drawable/ic_action_person"
            android:paddingBottom="16dp"
            android:paddingLeft="-65dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:text="Discounted Products"
            android:textSize="20sp" />
        <!-- android:drawablePadding="-130dp" -->

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#c0c0c0" />

        <Button
            android:id="@+id/bandedProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:drawableLeft="@drawable/ic_action_person"
            android:onClick="bandedProductNav"
            android:paddingBottom="16dp"
            android:paddingLeft="-100dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:text="Banded Products"
            android:textSize="20sp" />
        <!-- android:drawablePadding="-150dp" -->

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#c0c0c0" />

        <Button
            android:id="@+id/instoreSampling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:drawableLeft="@drawable/ic_action_person"
            android:paddingBottom="16dp"
            android:paddingLeft="-100dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:text="Instore Sampling"
            android:textSize="20sp" />
        <!-- android:drawablePadding="-150dp" -->

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#c0c0c0" />
    </LinearLayout>

    <com.darvds.ribbonmenu.RibbonMenuView
        android:id="@+id/ribbonMenuView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>