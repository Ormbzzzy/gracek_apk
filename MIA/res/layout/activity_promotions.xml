<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    		xmlns:tools="http://schemas.android.com/tools"
    		android:layout_width="match_parent"
    		android:layout_height="match_parent"  
    		tools:context=".Promotions">

<LinearLayout    
    android:layout_width="match_parent"
    android:layout_height="match_parent"    
    android:orientation="vertical"
    >    

    <Button android:drawableLeft= "@drawable/ic_action_person"        	
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:id="@+id/newProducts"
        	android:text="New Products" 
        	android:background="#ffffff" 
        	android:textSize="20sp"        	       	
        	android:paddingLeft="-125dp"
        	android:paddingRight="16dp"
        	android:paddingTop="16dp"
        	android:paddingBottom="16dp"
        	android:onClick="newProductNav"/>         	       	        	
        	<!-- android:drawablePadding="-155dp" -->
    
    <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="#c0c0c0"
             android:layout_marginLeft="16dp"
             android:layout_marginRight="16dp"/>
    
    <Button android:drawableLeft= "@drawable/ic_action_person"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"       	 	
        	android:id="@+id/discountedProducts"
        	android:text="Discounted Products"
        	android:textSize="20sp" 
        	android:background="#ffffff"
        	android:paddingLeft="-65dp"
        	android:paddingRight="16dp"
        	android:paddingTop="16dp"
        	android:paddingBottom="16dp"
        	android:onClick="discProductNav"/>
        	<!-- android:drawablePadding="-130dp" -->
    
     <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="#c0c0c0"
             android:layout_marginLeft="16dp"
             android:layout_marginRight="16dp"/>
    
    <Button android:drawableLeft= "@drawable/ic_action_person"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"       	 	
        	android:id="@+id/bandedProducts"
        	android:text="Banded Products" 
        	android:background="#ffffff"
        	android:textSize="20sp"
        	android:paddingLeft="-100dp"
        	android:paddingRight="16dp"
        	android:paddingTop="16dp"
        	android:paddingBottom="16dp"
        	android:onClick="bandedProductNav"/>
        	<!-- android:drawablePadding="-150dp" -->
    
     <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="#c0c0c0"
             android:layout_marginLeft="16dp"
             android:layout_marginRight="16dp"/>
     
     <Button android:drawableLeft= "@drawable/ic_action_person"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"       	 	
        	android:id="@+id/instoreSampling"
        	android:text="Instore Sampling" 
        	android:background="#ffffff"
        	android:textSize="20sp"
        	android:paddingLeft="-100dp"
        	android:paddingRight="16dp"
        	android:paddingTop="16dp"
        	android:paddingBottom="16dp"
        	android:onClick="instoreSampleNav"/>
        	<!--android:drawablePadding="-150dp"  -->
    
     <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="#c0c0c0"
             android:layout_marginLeft="16dp"
             android:layout_marginRight="16dp"/>
    
</LinearLayout>

<com.darvds.ribbonmenu.RibbonMenuView
        android:id="@+id/ribbonMenuView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>
