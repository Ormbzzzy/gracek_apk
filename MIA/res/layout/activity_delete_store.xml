<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeleteStore" >

    <LinearLayout
        android:id="@+id/delListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ListView
            android:id="@+id/delList"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="5dp" >

        <TextView
            android:id="@+id/compNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="60dp"
            android:text="Company Name:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/addressLabel1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/compNameLabel"
            android:layout_below="@+id/compNameLabel"
            android:layout_marginTop="49dp"
            android:text="Address:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/addressLine1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/addressLabel1"
            android:layout_marginLeft="90dp"
            android:layout_toRightOf="@+id/addressLabel1"
            android:text="Address"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/compName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/compNameLabel"
            android:layout_alignLeft="@+id/addressLine1"
            android:text="Company Name"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/cityLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/addressLabel1"
            android:layout_below="@+id/addressLabel1"
            android:layout_marginTop="52dp"
            android:text="City:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/cityLabel"
            android:layout_alignLeft="@+id/addressLine1"
            android:layout_marginTop="60dp"
            android:text="city"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/idLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/compNameLabel"
            android:layout_below="@+id/cityLabel"
            android:layout_marginTop="49dp"
            android:text="Company ID:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/compID"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/idLabel"
            android:layout_alignLeft="@+id/addressLine1"
            android:layout_below="@+id/citySpinner"
            android:hint="Enter Company ID"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/cityLabel"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="28dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="100" >

            <Button
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:text="Cancel"
                android:textSize="20sp" />

            <Button
                android:id="@+id/addStore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:text="Delete Store"
                android:textSize="20sp" />
        </LinearLayout>
    </RelativeLayout>

    <com.darvds.ribbonmenu.RibbonMenuView
        android:id="@+id/ribbonMenuView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>